<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.tonydemo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:theme="@style/DemoTheme.AppBarOverlay"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:name=".customView.switchViewDemo.LibActivity"
                  android:theme="@style/DemoTheme.AppBarOverlay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".customView.recycleViewDemo.RecycleViewMainActivity"
                  android:theme="@style/DemoTheme.AppBarOverlay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".customView.recycleViewDemo.ui.AnimationGridActivity"
                  android:theme="@style/DemoTheme.AppBarOverlay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".customView.recycleViewDemo.ui.AnimationListActivity"
                  android:theme="@style/DemoTheme.AppBarOverlay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".customView.recycleViewDemo.ui.GridActivity"
                  android:theme="@style/DemoTheme.AppBarOverlay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".customView.recycleViewDemo.ui.ListActivity"
                  android:theme="@style/DemoTheme.AppBarOverlay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
    </application>

</manifest>
