<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FloatingLabel">

        <!-- For Floating Hint -->
        <attr name="floatHintText" format="string" />
        <attr name="floatHintTextColorFocused" format="color" />
        <attr name="floatHintTextColorUnFocused" format="color" />
        <attr name="floatHintTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="floatHintTextGravity">
            <enum name="top" value="0x30" />
            <enum name="bottom" value="0x50" />
            <enum name="left" value="0x03" />
            <enum name="right" value="0x05" />
        </attr>
        <attr name="floatHintTextSize" format="integer" />
        <attr name="floatHintTextTypeface" format="string" />
        <attr name="floatHintTextBackground" format="color|reference" />
        <!-- For actual Text -->

        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="textGravity">
            <enum name="top" value="0x30" />
            <enum name="bottom" value="0x50" />
            <enum name="left" value="0x03" />
            <enum name="right" value="0x05" />
        </attr>
        <attr name="textSize" format="integer" />
        <attr name="textTypeface" format="string" />
        <attr name="textBackground" format="color|reference" />
        <attr name="isPassword" format="boolean" />
    </declare-styleable>
    <declare-styleable name="MySeekbar">
        <attr name="leftIcon" format="reference"></attr>
        <attr name="rightIcon" format="reference"></attr>
        <attr name="leftPadding" format="dimension"></attr>
    </declare-styleable>


    <declare-styleable name="WheelView">
        <attr name="offset" format="dimension"></attr>
        <attr name="normalTextColor" format="color" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="selectedTextColor" format="color" />
        <attr name="selectedTextSize" format="dimension" />
        <attr name="unitHight" format="dimension" />
        <attr name="itemNumber" format="integer" />
        <attr name="lineColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="maskHight" format="dimension" />
        <attr name="noEmpty" format="boolean" />
        <attr name="isEnable" format="boolean" />
        <attr name="isLoop" format="boolean"></attr>
    </declare-styleable>
    <declare-styleable name="WaveView">
        <attr name="outlineColor" format="color|reference" />
        <attr name="patternScaleFactor" format="float"></attr>
        <attr name="patternRes" format="reference"></attr>
        <attr name="waveRes" format="reference"></attr>
    </declare-styleable>
</resources>