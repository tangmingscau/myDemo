<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.tonydemo.customView.wheel.WheelView
        android:id="@+id/wheelView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:isLoop="true"
        app:itemNumber="13"
        app:lineColor="@android:color/holo_blue_dark"
        app:lineHeight="1.5dp"
        app:maskHight="100dp"
        app:noEmpty="true"
        app:normalTextColor="@android:color/holo_green_light"
        app:normalTextSize="32sp"
        app:offset="50dp"
        app:selectedTextColor="@android:color/holo_green_dark"
        app:selectedTextSize="80sp"
        app:unitHight="110dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:src="@drawable/air_number_select_icon" />

</FrameLayout>